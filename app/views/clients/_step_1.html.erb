<ul>
  <% if flash[:step_1_errors] %>
    <% flash[:step_1_errors].each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  <% end %>
</ul>
<div class="container">
  <h2>Step 1 - Basic Information</h2>
  <div class="jumbotron">
    <div class="form-group">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, id: :client_first_name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :middle_name, class: "form-label" %>
      <%= form.text_field :middle_name, id: :client_middle_name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, id: :client_last_name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :suffix, class: "form-label" %>
      <%= form.select :suffix, options_for_select(suffixes), {}, { class:"form-control"} %>
    </div>
    <div class="form-group">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.text_field :phone_number, id: :client_phone_number, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, id: :client_name, required: true, class: "form-control" %>
    </div>
  </div>
</div>
