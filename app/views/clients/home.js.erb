var errors = $("#errors");
errors.html('');
var success = $("#success");
success.html('');

<% if flash[:errors] %>
  errors.append("Please follow the fields guidelines:</br></br>")
  <% flash[:errors].each do |message| %>
    errors.append("*<%= j message %></br>");
  <% end %>

  <% else %>
    success.html('<%= j flash[:success] %>')
    $("#step_2_container").html("");//Erase step 2 content
    $("#step_3_container").html("<%= j render 'step_3' %>");//Show step 3 content

<% end %>
