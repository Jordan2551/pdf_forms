<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Case Number</th>
      <th>Petitioner</th>
      <th>Respondent</th>
      <th>Garnishee</th>
      <th>Name</th>
      <th>Address</th>
      <th>Bank name</th>
      <th>Bank address</th>
      <th colspan="3"></th>
      <th>PDFS</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.case_number %></td>
        <td><%= client.petitioner %></td>
        <td><%= client.respondent %></td>
        <td><%= client.garnishee %></td>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.bank_name %></td>
        <td><%= client.bank_address %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "PDFs", client_pdfs_path(client_id: client.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

