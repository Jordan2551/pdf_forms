
<h1 class="fancy-title">New Client Application</h1>

<ul>
  <% if flash[:step_4_errors] %>
    <% flash[:step_4_errors].each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  <% elsif flash[:step_3_success] %>
    <li class="success"><%= flash[:step_3_success] %></li>
  <% end %>
</ul>

<h2>Step 4 - Post Payment (Final Step)</h2>

<%= form_with(model: @client, url: register_step_4_path, local: true, method: :post) do |form| %>

  <div class="container margin-md">

    <h2>Alternate Contact</h2>
    <div class="jumbotron">


      <p><%= form.label "Hello", class: "form-label" %><%= form.check_box :gender, class: "form-control" %></p>


      <div class="form-group">
        <h3>In case we are not able to reach you is there someone else we can contact? (optional)</h3>
        <%= form.label :alternate_contact_name, value: "Full name", class: "form-label margin-md" %>
