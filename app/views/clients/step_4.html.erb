
<h1 class="fancy-title">New Client Application</h1>

<ul>
  <% if flash[:step_4_errors] %>
    <% flash[:step_4_errors].each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  <% elsif flash[:step_3_success] %>
    <li class="success"><%= flash[:step_3_success] %></li>
  <% end %>
</ul>

<h2>Step 4 - Post Payment (Final Step)</h2>

<%= form_with(model: @client, url: register_step_4_path, local: true, method: :post) do |form| %>

  <div class="container">

    <div class="jumbotron margin-sm">

      <div class="form-group">
        <h3>In case we are not able to reach you is there someone else we can contact? (optional)</h3>
        <%= form.label :alternate_contact_name, value: "Full name", class: "form-label margin-md" %>
        <%= form.text_field :alternate_contact_name, id: :client_alternate_contact_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :alternate_contact_phone_number, value: "Phone number", class: "form-label" %>
        <%= form.text_field :alternate_contact_phone_number, id: :client_alternate_contact_phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :alternate_contact_phone_number, value: "Email", class: "form-label" %>
        <%= form.text_field :alternate_contact_email, id: :client_alternate_contact_phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>Best Method to Contact This Person</p>
        <label class="radio-inline" for="client_alternate_contact_best_method">
          <%= form.radio_button :alternate_contact_best_method, "phone", id: :client_alternate_contact_best_method %> Phone
        </label>
        <label class="radio-inline" for="client_alternate_contact_best_method">
          <%= form.radio_button :alternate_contact_best_method, "email", id: :client_alternate_contact_best_method %> Email
        </label>
        <label class="radio-inline" for="client_alternate_contact_best_method">
          <%= form.radio_button :alternate_contact_best_method, "both", id: :client_alternate_contact_best_method %> Both
