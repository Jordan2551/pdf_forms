        <% owes_money_papers.each do |option, symbol| %>
        <p><%= form.label option, class: "form-label" %><%= form.check_box "owes_money_papers[#{symbol}]", class: "form-control" %></p>
        <% end %>
      </div>

      <div class="form-group margin-md">
        <%= form.label :court_order_modified, value: "Has this final judgment or court order been modified?" , class: "form-label" %>
        <%= form.select :court_order_modified, options_for_select(["Yes", "No", "Not Sure"]), {}, { class:"form-control", id: "countries"} %>
      </div>

      <div class="form-group margin-md">
        <%= form.label :documentation_send_method, value: "How would you like to send us a copy of documentation?" , class: "form-label" %>
