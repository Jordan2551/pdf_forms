      </div>
      <div class="form-group">
        <%= form.label :alternate_contact_phone_number, value: "Phone number", class: "form-label" %>
        <%= form.text_field :alternate_contact_phone_number, id: :client_alternate_contact_phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :alternate_contact_phone_number, value: "Email", class: "form-label" %>
        <%= form.text_field :alternate_contact_email, id: :client_alternate_contact_phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>Best Method to Contact This Person</p>
        <label class="radio-inline" for="client_alternate_contact_best_method">
          <%= form.radio_button :alternate_contact_best_method, "phone", id: :client_alternate_contact_best_method %> Phone
        </label>
        <label class="radio-inline" for="client_alternate_contact_best_method">
