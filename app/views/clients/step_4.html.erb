        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "black", id: :client_owes_money_race %>    Black/African-American</label>
        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "hispanic", id: :client_owes_money_race %>    Hispanic</label>
        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "asian", id: :client_owes_money_race %>    Asian/Pacific Islander</label>
        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "indian", id: :client_owes_money_race %>    American Indian/Alaskan</label>
        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "asian", id: :client_owes_money_race %>    Asian/Pacific Islander</label>
        <label class="form-check-label" for="client_owes_money_race"><%= form.radio_button :owes_money_race, "other", id: :client_owes_money_race_other %>    Other</label>
