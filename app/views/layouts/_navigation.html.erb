<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= home_path %>">PDF Creator</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to "Home", root_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Clients", clients_path %></li>
      <% end %>
      <li><%= link_to "Create Application", new_client_path %> </li>
    </ul>
    <ul class="nav navbar-nav pull-right">
      <% if user_signed_in? %><i class="fas fa-cog"></i>
          <li><a><%= current_user.email %></a></li>
          <li><%= link_to 'Log-out', destroy_user_session_path, method: :delete %></li>
          <li><a href="<%= edit_settings_path %>"><i class="fa fa-2x fa-cog" style="color:white"></i></a></li>
      <%else%>
          <li><%= link_to 'Log-in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
      <%end%>
    </ul>
  </div>
</nav>
<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do %>
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= msg %>
    <% end %>
  <% end %>
