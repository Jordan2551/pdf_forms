<% if flash[:errors] %>
  $("#messages").show();
  var payment_error_ul = $("#payment_error_ul");
  payment_error_ul.html('');
  <% flash[:errors].each do |key, value| %>
      message = "<%= value %>";
      message = message.replace("[", '');
      message = message.replace("]", '');
      payment_error_ul.append(message + "<br>");
  <% end %>
<% end %>
